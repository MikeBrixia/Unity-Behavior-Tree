{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Runtime/*.cs", 
             "Runtime/*.dll"
          ],
          "cwd": ".",
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "Docs/",
      "filter": "filterConfig.yml",
      "allowCompilationErrors": true
    }
  ],
  "build": {
    "globalMetadata":
      {
        "_appTitle": "Behavior Tree Editor documentation",
        "_appFooter": "Behavior Tree Editor by Michael Guida",
        "_enableSearch": true
      },
    "content": [
      {
        "files": [
          "api/**.yml"
        ],
        "cwd": "obj"
      },
      {
        "files": [
          "api/*.md",
          "articles/**.md",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "template": [
      "default",
      "templates/unity"
    ]
  }
}
